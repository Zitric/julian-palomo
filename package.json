    "validate": "yarn check-types && yarn check-format && yarn lint && next build",
    "test": "jest"
  },
  "dependencies": {
    "grommet": "^2.17.5",
    "grommet-icons": "^4.6.2",
    "next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@types/react": "17.0.22",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.2.1",
    "prettier": "^2.4.1",
    "typescript": "4.4.3"
  }
}
